<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Chart template account links -->
        <record id="chart_template_hospital" model="account.chart.template">
            <field name="use_anglo_saxon" eval="True"/>

            <field name="property_account_receivable_id" ref="account_template_hospital_121203"/>
            <field name="property_account_payable_id" ref="account_template_hospital_2302"/>

            <field name="property_account_expense_categ_id" ref="account_template_hospital_5201"/>
            <field name="property_account_income_categ_id" ref="account_template_hospital_4401"/>

            <field name="property_stock_account_input_categ_id" ref="account_template_hospital_1301"/>
            <field name="property_stock_account_output_categ_id" ref="account_template_hospital_1303"/>
            <field name="property_stock_valuation_account_id" ref="account_template_hospital_130201"/>
            
            <field name="income_currency_exchange_account_id" ref="account_template_hospital_5101"/>
            <field name="expense_currency_exchange_account_id" ref="account_template_hospital_5101"/>

            <field name="default_cash_difference_income_account_id" ref="account_template_hospital_1902"/>
            <field name="default_cash_difference_expense_account_id" ref="account_template_hospital_1902"/>
            <field name="default_pos_receivable_account_id" ref="account_template_hospital_121203" />
        </record>

        <!-- sales tax included -->
        <record id="tax_template_hospital_sales_included_13" model="account.tax.template">
            <field name="chart_template_id" ref="chart_template_hospital"/>
            <field name="name">13%销项税(含)</field>
            <field name="description">增值税销项税13%(价内税)</field>
            <field name="amount">13</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="price_include" eval="1"/>
            <field name="tax_group_id" ref="l10n_cn.l10n_cn_tax_group_vat_13"/>
            <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
        </record>

        <!-- sales tax excluded -->
        <record id="tax_template_hospital_sale_excluded_13" model="account.tax.template">
            <field name="chart_template_id" ref="chart_template_hospital"/>
            <field name="name">13%销项税</field>
            <field name="description">增值税销项税13%(价外税)</field>
            <field name="amount">13</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="price_include" eval="0"/>
            <field name="tax_group_id" ref="l10n_cn.l10n_cn_tax_group_vat_13"/>
            <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
        </record>

        <!-- purchase tax excluded -->
        <record id="tax_template_hospital_purchase_excluded_13" model="account.tax.template">
            <field name="chart_template_id" ref="chart_template_hospital"/>
            <field name="name">13%进项税</field>
            <field name="description">增值税进项税13%(价外税)</field>
            <field name="amount">13</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="price_include" eval="0"/>
            <field name="tax_group_id" ref="l10n_cn.l10n_cn_tax_group_vat_13"/>
            <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('account_template_hospital_2101'),
                }),
            ]"/>
        </record>
    </data>
</odoo>
